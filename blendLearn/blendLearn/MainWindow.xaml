<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:blendLearn"
        xmlns:HMIControls="clr-namespace:HMIControls;assembly=HMIControls" x:Class="blendLearn.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <HMIControls:newfan Name="fan" HorizontalAlignment="Left" VerticalAlignment="Top" 
                            Width="199" Margin="145,93,0,0" Height="186" MouseEnter="fan_MouseEnter" MouseLeave="fan_MouseLeave"/>
        <Canvas Grid.Column="1">
            <Button x:Name="bn_move" Height="32" Width="59" Canvas.Left="48" Canvas.Top="36" MouseDoubleClick="bn_move_MouseDoubleClick">123</Button>
        </Canvas>
        <Slider x:Name="sl" Value="{Binding XSize}" HorizontalAlignment="Left" Margin="24,355,0,0" 
                VerticalAlignment="Top" Width="357" Maximum="300" Minimum="0" SmallChange="5"
                TickFrequency="5"/>
    </Grid>
</Window>
